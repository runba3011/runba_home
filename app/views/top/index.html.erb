<%# 横並びにする、上部分に固定する %>
<%= stylesheet_link_tag "shared/common_header" , :media => "all" %>
<%= stylesheet_link_tag "top/index", :media => "all" %>

<%= render partial: "shared/header/root_header" , locals: {title: "Runba's Home"} %>

<div class = "main_content_parent">
  <div class = "main_content">
    <p class = "section_title">トップページ</p>
    <div class = "only_border"></div>
    <%# ここにパンくずリストを表示する %>
    <div class = "bredcrumbs_parent">
      <% breadcrumb :root %>
      <%= breadcrumbs separator: "&rsaquo; " %>
    </div>
    <div class = "function_explain">
      <p class = "small_section_title">機能紹介</p>
      <%= render partial: "shared/link" , locals:{number: 1, image: "runba_icon.png" , link: top_path(0) , title: "Runba’s Home" , explain: "ルンバ氏がテックキャンプを受講した際に作成したもの。みなさんご存知の通りルンバ氏は動画投稿とかゲーム作成とかやってたんで、ファンサイト的なものが作りたかったんですよね。"} %>
    <div id = "function_title">
      <p class = "small_section_title">機能一覧</p>
      <%= render partial: "shared/link" , locals:{image: "stickman_war.png" , link: stickman_war_index_path , title: "棒バトチャレンジ" , explain: @stickman_war_explain} %>
      <%= render partial: "shared/link" , locals:{image: "top/kiritan_vs_yukarisan.png" , link: movies_path , title: "動画視聴" , explain: @movie_explain} %>
      <%= render partial: "shared/link" , locals:{image: "top/book.png" , link: skill_room_index_path , title: "プログラミング学習記録" , explain: @programing_explain} %>
      <%= render partial: "shared/link" , locals:{image: "top/chat.png" , link: groups_path , title: "チャットルーム" , explain: @group_explain} %>
      <%= render partial: "shared/link" , locals:{image: "top/mail.png" , link: new_request_path , title: "リクエスト" , explain: @request_explain } %>
    </div>
</div>
</div>
















