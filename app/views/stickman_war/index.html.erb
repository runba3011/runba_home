      <%# <%= render partial: "picture_and_explain" , locals: {title: @explain_title2 , explain: @explain_detail2 , length: @explain_length2} %> %>
      <%# <%= render partial: "picture_and_explain" , locals: {title: @explain_title3 , explain: @explain_detail3 , length: @explain_length3} %> %>
      <%# <%= render partial: "shared/picture_and_explain" , locals: {title: @explain_title4 , explain: @explain_detail4} %>
    </div>


  </section>
</div>

