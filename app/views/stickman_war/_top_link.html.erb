<%# フッターの部分で呼び出したことがある %>
<%# <%= stylesheet_link_tag "shared/stickman_war_top_link" , :media => "all" %>
<%# application.html.erb内で↑を呼んでいるので、個別でクラス名などを与えれば上書きをすることができる %>
<%# 引数 individual_class , image , id , title %>
<%= stylesheet_link_tag "stickman_war/top_link" , media: "all" %>
  <div class = "_stickman_war_top_link_links">

    <%= link_to link , class: "_stickman_war_top_link_a" do %>
      <div class = "_stickman_war_top_link_image_parent" style = "background: <%= icon_background_color %>">
        <% if image != nil %>
          <%= image_tag image , alter: "#{image}という画像はありません" , class: "_stickman_war_top_link_image" %>
        <% else %>
          <%= image_tag "picture_not_find.png" , class: "_stickman_war_top_link_image" %>
        <% end %>
      </div>

      <div class = "_stickman_war_top_link_explain">
        <%= title %>
      </div>
    <% end %>
  </div>