  <script>
    jQuery(function($){
      $(".right_bar_content").on("click" , function(){
        const thisText = $(this).text();
        if(thisText == "パブリックドメインQ" ){
          const $scrollObject = $("#public_domain_q_tag");
          const scrollHeight = $scrollObject.offset().top;
          $('body , html').animate({scrollTop: scrollHeight} , "swing")
        }
        else if(thisText == "マッスルプラス"){
          const $scrollObject = $("#mascle_plus_tag");
          const scrollHeight = $scrollObject.offset().top;
          $('body , html').animate({scrollTop: scrollHeight} , "swing")
        }
        else if(thisText == "TOPECONHEROES"){
          const $scrollObject = $("#topecon_heroes_tag");
          const scrollHeight = $scrollObject.offset().top;
          $('body , html').animate({scrollTop: scrollHeight} , "swing")
        }
        else if(thisText == "七三ゆきのアトリエ"){
          const $scrollObject = $("#nanasan_yuki_tag");
          const scrollHeight = $scrollObject.offset().top;
          $('body , html').animate({scrollTop: scrollHeight} , "swing")
        }
        else if(thisText == "texture ninja"){
          const $scrollObject = $("#texture_ninja_tag");
          const scrollHeight = $scrollObject.offset().top;
          $('body , html').animate({scrollTop: scrollHeight} , "swing")
        }
        else if(thisText == "いらすとや"){
          const $scrollObject = $("#irasutoya_tag");
          const scrollHeight = $scrollObject.offset().top;
          $('body , html').animate({scrollTop: scrollHeight} , "swing")
        }
      })
    })
  </script>

