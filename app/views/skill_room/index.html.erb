<%= stylesheet_link_tag "skill_room/common" , :media => "all" %>
<%= stylesheet_link_tag "skill_room/index" , :media => "all" %>
<%= render partial: "shared/header/root_header" , locals: {title: "スキルルーム"} %>
<div class = "main_content_parent">
  <div class = "main_content">

    <% breadcrumb :skill_room %>
    <%= breadcrumbs separator: "&rsaquo; " %>

    <div class = "language_explain_parent">
      <%= render partial: "skill_play_room_link" , locals: {title:"技術の無駄遣い" , link: "/skill_room/skill_play_room/0", explain:"説明書きを後から加える" , image: nil     } %>
    </div>

    <p class = "small_section_title">それぞれの言語や創作物について</p>
    <div class = "language_explain_parent">
      <%= render partial: "language_link" , locals: {languages: SkillAllLanguage.all } %>
    </div>

    <p class = "small_section_title">JQueryの練習</p>
    <div class="jquery_practice_parent">
      <% SkillJquery.all.each do |jquery| %>
        <%= link_to "/skill_room/jquery_practice/#{jquery.id}", class: "jquery_link" do%>
          <div class ="jquery_practice_single">
            <p class = "jquery_practice_title"><%= jquery.id %>.<%= jquery.title %></p>
            <p class= "jquery_practice_explain"><%= h(jquery.explain).gsub(/\r\n|\n|\r/, "<br>").html_safe %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>