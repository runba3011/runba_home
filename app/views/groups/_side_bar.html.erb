<%= stylesheet_link_tag "groups/side_bar" , :media => "all" %>

<div class = "_side_bar">
  <div class = "_side_bar_head top">
    <p class = "_side_bar_group_title">チャットルーム</p>
  </div>

  <div class = "_side_bar_center hide_scroll_bar center">
    <div class = "_side_bar_user_information">
      <%= link_to user_path(current_user) , class: "_side_bar_current_user_link" do %>
        <div class =  "_side_bar_image_parent">
          <% if current_user.icon_image.attached? %>
            <%= image_tag current_user.icon_image , class: "_side_bar_current_user_icon" %>
          <% else %>
            <%= image_tag "defaults/user_icon_image.png" , class: "_side_bar_current_user_icon" %>
          <% end %>
        </div>
        <p class = "_side_bar_current_user_name"><%= current_user.nickname %></p>
      <% end %>
    </div>
    <p>所属しているルーム名</p>
    <% user.groups.each do |group| %>
      <div class = "_side_bar_single_group">
        <% if group.image.attached? %>
          <%= image_tag group.image.variant(resize: '500x500') , class: "_side_bar_group_icon" %>
        <% else %>
          <%= image_tag "defaults/group_icon.png" , class: "_side_bar_group_icon" %>
        <% end %>
        <%= link_to group.name , group_path(group) , class: "_side_bar_group_name" %>
      </div>
    <% end %>
  </div>

  <div class = "_side_bar_bottom hide_scroll_bar bottom">
    <%= link_to "ルームを作成する" , new_group_path , class: "_side_bar_create_group _side_bar_bottom_single" %>
    <%= link_to "トップページへ戻る" , "/" , class: "_side_bar_back  _side_bar_bottom_single" %>
  </div>
</div>