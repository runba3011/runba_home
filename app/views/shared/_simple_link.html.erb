<%# フッターの部分で呼び出したことがある %>
<%= stylesheet_link_tag "shared/simple_link" , :media => "all" %>

  <div class = "_simple_link_links">
    <%= link_to link , class: "_simple_link_a" do %>
      <% if image != nil %>
        <%= image_tag image , alter: "#{image}という画像はありません" , class: "_simple_link_image" %>
      <% else %>
        <%= image_tag "picture_not_find.png" , class: "_simple_link_image" %>
      <% end %>

      <div class = "_simple_link_explain">
        <p class = "_simple_link_title_text"><%= title %></p>
      </div>
    <% end %>
  </div>