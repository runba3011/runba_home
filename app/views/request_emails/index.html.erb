<p id="notice"><%= notice %></p>

<h1>Request Emails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_emails.each do |request_email| %>
      <tr>
        <td><%= request_email.name %></td>
        <td><%= request_email.email %></td>
        <td><%= link_to 'Show', request_email %></td>
        <td><%= link_to 'Edit', edit_request_email_path(request_email) %></td>
        <td><%= link_to 'Destroy', request_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request Email', new_request_email_path %>
