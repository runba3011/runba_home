<%= render partial: "shared/header/stickman_war_header"  %>

<div class = "main_content_parent">
  <div class = "main_content">
    <%= stylesheet_link_tag "stickman_war_common/templete" %>
    <%= render partial: @show_page_path %>

    <%= render partial: "stickman_war_detail/comment" , locals: {comments: @comments } %>

    <% if user_signed_in? %>
      <%= render partial: "shared/errors" , locals: {model: @comment} %>
      <%= form_with model: @comment , url: @create_path, local: true  do |f| %>
        <%= f.text_area :text %>
        <%= f.submit "送信" %>
      <% end %>
    <% end %>

  </div>
</div>

