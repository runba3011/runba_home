<%= render partial: "shared/header/stickman_war_header"  %>

<div class = "main_content_parent">
  <div class = "main_content">
    <%= stylesheet_link_tag "stickman_war_common/templete" %>
    <%= render partial: @show_page_path %>



    <p class = "small_section_title">コメント</p>
    <div class = "text_box all_comment_box" id = "comments_parent">
      <%= render partial: "stickman_war_detail/comment" , locals: {comments: @comments } %>
    </div>
    <div class = "comment_box">
    <% if user_signed_in? %>
      <%= render partial: "shared/errors" , locals: {model: @comment} %>
      <p style = "color: #d8d8d8;">新規コメントを削除するには<br class = "br_400px">ページを読み込み直してください</p>
      <%= form_with model: @comment , url: @create_path, local: true  do |f| %>
        <%= f.text_area :text , class: "comment_text_box" , id: "comment_text_box" %>
        <%= f.submit "送信" ,  class: "comment_submit_btn" , id: "comment_submit_button" %>
      <% end %>
    <% else %>

    <% end %>
    </div>

  </div>
</div>

<%= stylesheet_link_tag "stickman_war_detail/show" , :media => "all" %>
